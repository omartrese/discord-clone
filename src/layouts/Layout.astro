---
import Header from "../components/Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Discord es la plataforma perfecta para jugar y pasarlo bien con amigos, o incluso para crear una comunidad con miembros en todo el mundo. Personaliza tu propio espacio para hablar, jugar y socializar."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="">
		<main class="w-screen h-screen">
			<Header />
			<slot />
		</main>
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap");

	@font-face {
		font-family: "discordFont";
		src: url("../../public/fonts/ABCGintoNord-Black.otf");
	}

	* {
		box-sizing: border-box;
		margin: 0;
	}

	html {
		font-family: "Nurito Sans", system-ui, sans-serif;
		color-scheme: dark light;
	}

	body {
		background: linear-gradient(
			180deg,
			#060d4c 0%,
			#1d2b7f 50%,
			#2d47a6 100%
		);

		/* background-image: url('../../public/bg.webp'); */

		background-size: cover;
		background-repeat: no-repeat;
		position: relative;
	}

	h1,
	h2,
	h3,
	h4,
	h5 {
		font-family: "discordFont";
	}

	a:hover {
		text-decoration: underline;
	}
</style>
